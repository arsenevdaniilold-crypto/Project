using System;

public class Circle
{
    public double Radius;
    public double X;
    public double Y;
    
    public Circle(double radius, double x, double y)
    {
        Radius = radius;
        X = x;
        Y = y;
    }
    
    public void MoveToRandomPoint()
    {
        Random random = new Random();
        X = random.Next(-99, 100);
        Y = random.Next(-99, 100);
    }
}

class Program
{
    static void Main()
    {
        Console.Write("Введите радиус круга: ");
        double radius = Convert.ToDouble(Console.ReadLine());
        
        Console.Write("Введите координату X центра: ");
        double x = Convert.ToDouble(Console.ReadLine());
        
        Console.Write("Введите координату Y центра: ");
        double y = Convert.ToDouble(Console.ReadLine());
        
        Circle circle = new Circle(radius, x, y);
        
        Console.WriteLine($"\nСоздан круг:");
        Console.WriteLine($"Радиус: {circle.Radius}");
        Console.WriteLine($"Центр: ({circle.X}, {circle.Y})");
        Console.WriteLine($"Длина окружности: {2 * Math.PI * circle.Radius:F2}");
        
        Console.Write("\nНажмите Enter для перемещения центра в случайную точку...");
        Console.ReadLine();
        
        circle.MoveToRandomPoint();
        
        Console.WriteLine($"\nНовые координаты центра: ({circle.X}, {circle.Y})");
    }
}
